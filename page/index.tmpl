{{ define "body" }}
  <main>
    <section class="flex-v gap-1 items-center">
      <img
        style="width:128px;margin-bottom:1rem"
        src="/static/tw-outline.svg/"
      />
      <h1>台島</h1>
      <p>台灣人的地盤</p>
    </section>
    <section class="flex-v gap-1 items-center">
      {{ if eq .user nil }}
        <div class="flex-h gap-05">
          <a class="button button-primary button-sm" href="/log-in/"> 登入</a>
          <a class="button button-secondary button-sm" href="/sign-up/">
            註冊</a
          >
        </div>
      {{ else }}
        <h2>
          Hi,
          {{ .user.Username }}
        </h2>
        <form hx-post="/log-out/">
          <input type="submit" class="button button-danger" value="登出" />
        </form>
      {{ end }}
    </section>
  </main>
{{ end }}
